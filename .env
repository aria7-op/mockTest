# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mock
DB_USER=mock
DB_PASSWORD=mock
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@mocktest.com

# AWS Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mock-test-files

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=usd

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Question Randomization Configuration
MIN_QUESTION_OVERLAP_PERCENTAGE=5
MAX_QUESTION_OVERLAP_PERCENTAGE=15
QUESTION_RANDOMIZATION_ALGORITHM=weighted_random

# Exam Configuration
DEFAULT_EXAM_DURATION=120
MAX_EXAM_DURATION=300
MIN_EXAM_DURATION=30
DEFAULT_QUESTIONS_PER_EXAM=50
MAX_QUESTIONS_PER_EXAM=200

# Admin Configuration
ADMIN_EMAIL=admin@mocktest.com
ADMIN_PASSWORD=admin123456
SUPER_ADMIN_EMAIL=superadmin@mocktest.com
DATABASE_URL=postgresql://mock:mock@localhost:5432/mock
